// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
// "model"=> palavra reservado para criacao de uma tabela
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//modelos novo ################################# //
// Tabela Usuários para acesso ao sistema
model Usuarios {
  id         Int         @id @default(autoincrement())
  email      String
  senha      String
  pacientes  Pacientes[]
  psicologos Psicologos[]
}

// Tabela Psicólogos relacionando com usuários
model Psicologos {
  id           Int           @id @default(autoincrement())
  nome         String
  crp          String
  description  String
  media        String
  title        String
  totalReviews String
  notaEstrelas String
  createdAt    DateTime      @default(now())
  bloqueado    Boolean       @default(false)
  usuarios     Usuarios[]
  agendamentos Agendamentos[]
}

// Tabela Pacientes relacionando com usuários
model Pacientes {
  id           Int           @id @default(autoincrement())
  name         String
  address      String
  management   String
  phone        String
  sectionsWeek String
  avatarUrl    String
  createdAt    DateTime      @default(now())
  bloqueado    Boolean       @default(false)
  usuario      Usuarios[]
  agendamentos Agendamentos[]
}

// Tabela Agendamentos relacionando com Psicólogos com Pacientes
model Agendamentos {
  id          Int       @id @default(autoincrement())
  dataagenda  DateTime
  horaagenda  DateTime
  psicologo   Psicologos @relation(fields: [psicologoId], references: [id])
  psicologoId Int
  paciente    Pacientes  @relation(fields: [pacienteId], references: [id])
  pacienteId  Int
}
